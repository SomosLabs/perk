doctype html
html(lang='en')
  head
    title perk - somoslabs
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet' href='https://fonts.googleapis.com/css?family=Roboto:300,400,500,700,400italic')
    link(rel='stylesheet' href='https://perk.somoslabs.com/static/css/toolkit-inverse.css')
    link(rel='stylesheet' href='https://perk.somoslabs.com/static/css/application.css')
    link(rel='stylesheet' href='https://perk.somoslabs.com/static/css/override.css')

  body
    .with-iconav
      nav.iconav
        a.iconav-brand(href='/')
          img.logo-icon(src='https://avatars3.githubusercontent.com/u/22484779' height='50')
        .iconav-slider
          ul.nav.nav-pills.iconav-nav
            li(class=path=='/'?'active':undefined)
              a(href='/', title='Overview', data-toggle='tooltip', data-placement='right', data-container='body')
                span.icon.icon-home
                small.iconav-nav-label.visible-xs-block Overview
            li(class=path=='/perks'?'active':undefined)
              a(href='/perks', title='Perks', data-toggle='tooltip', data-placement='right', data-container='body')
                span.icon.icon-trophy
                small.iconav-nav-label.visible-xs-block Perks
            li(class=path=='/jobs'?'active':undefined)
              a(href='', title='Jobs (Coming Soon)', data-toggle='tooltip', data-placement='right', data-container='body')
                span.icon.icon-briefcase
                small.iconav-nav-label.visible-xs-block Jobs
            li(class=path=='/partners'?'active':undefined)
              a(href='/partners', title='Partners', data-toggle='tooltip', data-placement='right', data-container='body')
                span.icon.icon-heart
                small.iconav-nav-label.visible-xs-block Partners
            li(class=path=='/user'?'active':undefined)
              a(href='/user', title=`Signed in as ${user.first} ${user.last}`, data-toggle='tooltip', data-placement='right', data-container='body')
                img.img-circle.img-responsive(src=`${user.image}`, alt='')
                small.iconav-nav-label.visible-xs-block @josebet1
    .container
      block content
  script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js', integrity='sha384-3ceskX3iaEnIogmQchP8opvBy3Mi7Ce34nWjpBIwVTHfGYWQS9jwHDVRnpKKHJg7', crossorigin='anonymous')
  script(src='https://perk.somoslabs.com/static/js/chart.js')
  script(src='https://perk.somoslabs.com/static/js/tablesorter.min.js')
  script(src='https://perk.somoslabs.com/static/js/toolkit.js')
  script(src='https://perk.somoslabs.com/static/js/application.js')
  script(src='https://perk.somoslabs.com/static/js/perks.js')
