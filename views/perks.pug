extends layout
block content

  .dashhead
    .dashhead-titles
      h6.dashhead-subtitle perk
      h3.dashhead-title Perks

  .hr-divider
    h3.hr-divider-content.hr-divider-heading= `${user.first}'s Perks`

  br

  .alert.alert-info(role='alert')= `Hi ${user.first}! Congratulations on your graduation of the (boot) program. Below you can find some of the perks provided by Somos Labs' partners.`

  .row
    each perk in perks
      .col-xs-6.col-sm-6.col-md-4.col-lg-4
        .box
          .box-icon
          .info
            h4.text-center= perk.title
            p= perk.description
            a.btn.getButton(perk-id=perk._id)= perk.view.button

  #signupModal.modal.fade
    .modal-dialog.modal-md
      .modal-content
        .modal-header
          button.close(type='button', data-dismiss='modal', aria-label='Close')
            span(aria-hidden='true') Ã—
          h4.modal-title= ''
        p.modal-body= ''
        .modal-actions
          button.btn-link.modal-action(type='button', data-dismiss='modal') Cancel
          a.btn.btn-link.modal-action.model-positive(type='button', data-dismiss='modal' href='')
            strong Continue





